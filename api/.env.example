# =================================================================
# Django Secret Key
# =================================================================
# Generate a new one: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =================================================================
# Database Configuration
# =================================================================
# Development (SQLite - default, no config needed)
DATABASE_ENGINE=sqlite

# Production (PostgreSQL/Supabase)
# DATABASE_ENGINE=postgresql
DATABASE_NAME=wisematic_erp
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=db.xxxxxxxxxxxxx.supabase.co
DATABASE_PORT=5432

# Supabase Direct Connection
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# AWS RDS (Alternative)
# AWS_RDS_HOST=your-rds-endpoint.amazonaws.com
# AWS_RDS_PORT=5432
# AWS_RDS_DATABASE=wisematic_erp
# AWS_RDS_USER=admin
# AWS_RDS_PASSWORD=your-rds-password

# =================================================================
# AI API Keys
# =================================================================
# OpenAI (ChatGPT)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google AI (Gemini)
GOOGLE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GEMINI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxx

# DeepSeek
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =================================================================
# Google OAuth 2.0 Configuration
# =================================================================
GOOGLE_OAUTH_CLIENT_ID=xxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxx
