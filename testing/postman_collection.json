            "url": "{{baseUrl}}/api/v1/finance-assistant/analyze/"
          }
        },
        {
          "name": "Analyze Financial Report",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
