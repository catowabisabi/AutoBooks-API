              "mode": "raw",
              "raw": "{\n    \"report_type\": \"income_statement\",\n    \"periods\": [\n        {\"period\": \"2024-Q3\", \"data\": {\"revenue\": 900000}},\n        {\"period\": \"2024-Q4\", \"data\": {\"revenue\": 1000000}}\n    ]\n}"
            },
            "url": "{{baseUrl}}/api/v1/finance-assistant/compare-periods/"
          }
        },
        {
          "name": "Forecast",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"historical_data\": [\n        {\"period\": \"Q1\", \"value\": 100000},\n        {\"period\": \"Q2\", \"value\": 120000},\n        {\"period\": \"Q3\", \"value\": 115000},\n        {\"period\": \"Q4\", \"value\": 140000}\n    ],\n    \"forecast_periods\": 4,\n    \"metric\": \"revenue\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/finance-assistant/forecast/"
          }
        }
      ]
    },
