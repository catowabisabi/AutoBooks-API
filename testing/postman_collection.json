              "mode": "raw",
              "raw": "{\n    \"report_type\": \"income_statement\",\n    \"report_data\": {\n        \"revenue\": 1000000,\n        \"expenses\": 750000,\n        \"net_income\": 250000\n    },\n    \"questions\": [\"What are the key insights?\"],\n    \"period\": \"2024-Q4\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/finance-assistant/analyze-report/"
