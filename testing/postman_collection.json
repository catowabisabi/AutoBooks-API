{
  "info": {
    "_postman_id": "wisematic-erp-api-collection",
    "name": "Wisematic ERP API",
    "description": "Complete API collection for Wisematic ERP system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (Get Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.access) {",
                  "    pm.collectionVariables.set('accessToken', jsonData.access);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/token/"
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh\": \"{{refreshToken}}\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/token/refresh/"
          }
        },
        {
          "name": "Register User",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"newuser@example.com\",\n    \"full_name\": \"New User\",\n    \"password\": \"password123\",\n    \"password2\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/users/register/"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/me/"
          }
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/?page=1&page_size=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", ""],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "page_size", "value": "20" },
                { "key": "role", "value": "", "disabled": true },
                { "key": "is_active", "value": "true", "disabled": true },
                { "key": "search", "value": "", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/{{userId}}/"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"full_name\": \"Updated Name\",\n    \"phone\": \"+1234567890\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/users/profile/"
          }
        },
        {
          "name": "Get User Stats",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/stats/"
          }
        },
        {
          "name": "Get User Settings",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/user-settings/"
          }
        },
        {
          "name": "Update Notification Settings",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email_notifications\": true,\n    \"push_notifications\": false\n}"
            },
            "url": "{{baseUrl}}/api/v1/user-settings/notifications/"
          }
        }
      ]
    },
    {
      "name": "AI Service",
      "item": [
        {
          "name": "Chat",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"message\": \"Hello, how can you help me?\",\n    \"provider\": \"openai\",\n    \"model\": \"gpt-4o-mini\",\n    \"temperature\": 0.7\n}"
            },
            "url": "{{baseUrl}}/api/v1/ai-service/chat/"
          }
        },
        {
          "name": "Chat with History",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"messages\": [\n        {\"role\": \"user\", \"content\": \"Hello\"},\n        {\"role\": \"assistant\", \"content\": \"Hi there!\"},\n        {\"role\": \"user\", \"content\": \"What is ERP?\"}\n    ],\n    \"provider\": \"openai\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/ai-service/chat-with-history/"
          }
        },
        {
          "name": "Analyze Image",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": "" },
                { "key": "prompt", "value": "Describe this image", "type": "text" },
                { "key": "provider", "value": "gemini", "type": "text" }
              ]
            },
            "url": "{{baseUrl}}/api/v1/ai-service/analyze-image/"
          }
        },
        {
          "name": "Get Providers",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/ai-service/providers/"
          }
        },
        {
          "name": "Get Models",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/ai-service/models/?provider=openai",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "ai-service", "models", ""],
              "query": [{ "key": "provider", "value": "openai" }]
            }
          }
        },
        {
          "name": "Set Default Provider",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"provider\": \"openai\",\n    \"model\": \"gpt-4o-mini\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/ai-service/set-default/"
          }
        },
        {
          "name": "Test Connection",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"provider\": \"openai\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/ai-service/test-connection/"
          }
        }
      ]
    },
    {
      "name": "Planner Assistant",
      "item": [
        {
          "name": "Start Dataset Load",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/planner-assistant/start/"
          }
        },
        {
          "name": "Get Planner Data",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/planner-assistant/data/"
          }
        },
        {
          "name": "Query Planner",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"query\": \"What tasks are due this week?\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/planner-assistant/query/"
          }
        },
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/planner-assistant/tasks/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "planner-assistant", "tasks", ""],
              "query": [
                { "key": "status", "value": "TODO", "disabled": true },
                { "key": "priority", "value": "HIGH", "disabled": true },
                { "key": "overdue", "value": "true", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"New Task\",\n    \"description\": \"Task description\",\n    \"priority\": \"HIGH\",\n    \"due_date\": \"2025-12-15\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/planner-assistant/tasks/"
          }
        },
        {
          "name": "AI Create Tasks",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"input_text\": \"I need to prepare Q4 financial report by Friday, schedule a meeting with the team on Monday, and review the budget proposal\",\n    \"auto_prioritize\": true,\n    \"auto_schedule\": true\n}"
            },
            "url": "{{baseUrl}}/api/v1/planner-assistant/tasks/ai_create/"
          }
        },
        {
          "name": "Complete Task",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/planner-assistant/tasks/{{taskId}}/complete/"
          }
        },
        {
          "name": "List Events",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/planner-assistant/events/"
          }
        }
      ]
    },
    {
      "name": "Document Assistant",
      "item": [
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "" }
              ]
            },
            "url": "{{baseUrl}}/api/v1/document-assistant/upload/"
          }
        },
        {
          "name": "Get Document Info",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/document-assistant/{{documentId}}/info/"
          }
        },
        {
          "name": "Query Document",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"document_id\": \"{{documentId}}\",\n    \"query\": \"What is the total amount?\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/document-assistant/query/"
          }
        },
        {
          "name": "Process Document (Upload + Query)",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "" },
                { "key": "query", "value": "Summarize this document", "type": "text" },
                { "key": "return_document_data", "value": "false", "type": "text" }
              ]
            },
            "url": "{{baseUrl}}/api/v1/document-assistant/process/"
          }
        },
        {
          "name": "List Documents",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/document-assistant/documents/"
          }
        }
      ]
    },
    {
